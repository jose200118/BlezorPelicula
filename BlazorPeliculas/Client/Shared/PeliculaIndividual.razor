 <div>
        <p>Titulo: <b>@Pelicula.Titulo</b></p>
        <p>Fecha Lanzamiento: <b>@Pelicula.Lanzamiento.ToString("dd mm yyyy")</b></p>
        @if (MostrarBotones)
    {
        <div>
            <button @onclick="@(() => ElininarPelicula.InvokeAsync(Pelicula))"> Borrar</button>
        </div>

     }
</div>

@code {
    [Parameter] public Pelicula Pelicula { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Pelicula> ElininarPelicula { get; set; }
  


  
}