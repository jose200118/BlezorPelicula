  @if (Peliculas == null)
{
    @ChildContent
}
else if (Peliculas.Count == 0)
{
    <text> No hay registros para mostrar... </text>
}

else
{
       <input type="checkbox" @bind="MostrarBotones"/>
    @foreach (var pelicula in Peliculas)
    {
        <PeliculaIndividual Pelicula="pelicula" ElininarPelicula="ElinumarPelicula"
        MostrarBotones="MostrarBotones" />
    }
}

@code {

    [Parameter] public List<Pelicula> Peliculas { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    bool MostrarBotones = false;

    void ElinumarPelicula(Pelicula pelicula)
    {
        Peliculas.Remove(pelicula);
        Console.WriteLine($"Se ha eliminado una pelicula {pelicula.Titulo}");
    }
}
